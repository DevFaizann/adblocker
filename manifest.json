{
    
    "manifest_version": 3,
    "name": "Adblocker",
    "version": "1.0",
    "description": "Adblocker allows you to surf the web freely without irritating ads!",
    "background.service_worker": {
        "service_worker": ["background.js"]
    },
    "icons":{
        "16": "icons/icon16.png",
        "32": "icons/icon16.png",
        "48": "icons/icon16.png",
        "128": "icons/icon16.png"
    },
    
    "permissions": [
        "webRequest", 
        "webRequestBlocking",
        "declarativeNetRequest", 
        "declarativeNetRequestFeedback",
        "declarativeNetRequestWithHostAccess",
        "tabs",
        "<all_urls>"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://*.facebook.com/*"
      ]
}